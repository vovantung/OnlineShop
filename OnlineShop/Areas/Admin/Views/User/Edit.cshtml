@model Models.Framework.Account
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutMasterVueXY.cshtml";
}



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



<div class="card shadow mb-4" style="width:100%; height:100%">
  
        
        <!-- Validation -->
        <section class="bs-validation">


            <!-- jQuery Validation -->


            <div class="card-body" style="width:100%; height:100%">
                <span style="margin:0px" data-i18n="User Management">Cập nhật thông tin người dùng</span>
                <hr>


                <div class="form-group">

                    <!--Thuộc tính style = "display:none" để ẩn Editor trường  UserID, nhưng vẫn giữ  được giá trị của trường này khi submit-->
                    @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @type = "text", @style = "display:none", @class = "form-control", @id = "basic-default-name" } })
                </div>
                <div class="form-group">
                    <label class="form-label" for="basic-default-email">Tên đầy đủ</label>
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="form-label" for="basic-default-password">Mật khẩu</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mật khẩu...", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox">

                        @Html.EditorFor(model => model.Status, new { htmlAttributes = new {@class = "custom-control-input", @name = "validationCheck", @id = "validationCheck",  @type = "checkbox" } })
                        <label class="custom-control-label" for="validationCheck">Trạng thái kích hoạt/khóa</label>
                    </div>

                </div>
                <input style="disp" />
                
               

                

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" name="submit" value="Submit">Submit</button>
                    </div>
                </div>

            </div>

        </section>

    </div>

    }









